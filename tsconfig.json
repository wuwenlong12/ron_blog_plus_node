{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false, // 单独允许 any
    "esModuleInterop": true,
    "types": ["node", "express"],
    "noEmitOnError": false
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules"]
}